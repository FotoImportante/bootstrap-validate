extends layouts/app

block content
  .container

    .panel.panel-primary
      .panel-heading Demo
      .panel-body
        p See for yourself and enter an email address. Well, rather not!
        .form-group
          label.control-label(for='docs-demo') Enter your E-Mail Address :)
          input.form-control(id='docs-demo' placeholder='jon@example.org')

    h3 Behind the scenes
    p Literally a no-brainer!

    section
      h4 HTML:
      pre.code
        | &lt;div class="form-group"&gt;
        |   &lt;label&gt;Enter your E-Mail Address :)&lt;/label&gt;
        |   &lt;input id="docs-demo" class="form-control"&gt;
        | &lt;/div&gt;

    section
      h4 JavaScript:
      pre.code &lt;script&gt;bootstrapValidate(document.getElementById('docs-demo'), 'email');&lt;/script&gt;

    p.lead Easy, ain't it?

block append scripts
  script(src='https://cdn.rawgit.com/PascaleBeier/bootstrap-validate/1.0.5/dist/bootstrap-validate.js'
    integrity='sha384-omuTqXXurpV/Qy7hnNjXEr/NwQnAc9SlGst7LsVOVGXF8yEV/5Foh8nCjVkqZeht' crossorigin='anonymous')
  script.
    bootstrapValidate(document.getElementById('docs-demo'), 'email')
